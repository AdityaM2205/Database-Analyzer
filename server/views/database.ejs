<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database - Data Analyzer</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div id="app">
        <div id="sidebar">
            <div class="sidebar-header">
                <h2>Data Analyzer</h2>
            </div>
            <div class="sidebar-tabs">
                <a href="/chat" class="sidebar-tab">Chat</a>
                <a href="/database" class="sidebar-tab">Database</a>
            </div>
        </div>
        <div id="database-container">
            <div id="database-header">
                <h2>Uploaded Database</h2>
            </div>
            <div id="databaseTable">
                <table>
                    <% if (csvData && csvData.length > 0) { %>
                        <thead>
                            <tr>
                                <% Object.keys(csvData[0]).forEach(column => { %>
                                    <th><%= column %></th>
                                <% }); %>
                            </tr>
                        </thead>
                        <tbody>
                            <% csvData.forEach(row => { %>
                                <tr>
                                    <% Object.values(row).forEach(value => { %>
                                        <td><%= value %></td>
                                    <% }); %>
                                </tr>
                            <% }); %>
                        </tbody>
                    <% } else { %>
                        <p>No data available</p>
                    <% } %>
                </table>
            </div>
        </div>
    </div>
    <%- include('footer') %>
</body>
</html>
